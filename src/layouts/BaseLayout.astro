---
import "../styles/base/_index.scss";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta
            name="viewport"
            content="width=device-width, height=device-height, initial-scale=1"
        />
    </head>
    <body class="crt">
        <main class="container" id="main">
            <slot name="main"><slot /></slot>
        </main>
        <style lang="scss">
            html {
                height: -webkit-fill-available;
            }
            // crt effect
            .crt {
                position: relative;
            }

            .crt::before {
                content: " ";
                display: block;
                position: absolute;
                inset: 0;
                pointer-events: none;
                z-index: 5;
                background: linear-gradient(
                        transparent 15%,
                        black,
                        transparent 85%
                    ),
                    linear-gradient(
                        90deg,
                        black 1%,
                        red,
                        black,
                        green,
                        black,
                        blue,
                        black 99%
                    );
                background-size: 100% 3px, 12px 100%;
                opacity: var(--intensity, 0.1);
            }
            .term {
                position: relative;
                background-color: hsl(var(--base-darker));
                &::before,
                &::after {
                    position: absolute;
                    content: "";

                    display: block;
                }
                &::before {
                    top: 0;
                    left: 0;
                    width: 100%;
                    background-color: hsl(var(--base-lighter));
                    width: 100%;
                    height: 1.1rem;
                    opacity: 0.3;
                }
                &::after {
                    top: 0.3rem;
                    width: 2.6rem;
                    right: 0.6rem;
                    background: radial-gradient(
                                farthest-side,
                                hsl(var(--red)) 100%,
                                transparent
                            )
                            top right/0.6rem,
                        radial-gradient(
                                farthest-side,
                                hsl(var(--green)) 100%,
                                transparent
                            )
                            top center/0.6rem,
                        radial-gradient(
                                farthest-side,
                                hsl(var(--yellow)) 100%,
                                transparent
                            )
                            top left/0.6rem;
                    background-repeat: no-repeat;
                    height: 0.6rem;
                }
            }
        </style>
    </body>
</html>
